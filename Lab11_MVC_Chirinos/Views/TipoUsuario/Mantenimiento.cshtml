@model Modelo.TIPO_USUARIO
@{
    ViewBag.Title = (Model.IDTIPOUSUARIO > 0 ? Model.NOMBRE : "Nuevo Tipo de Usuario");
}

<ol class="breadcrumb">
    <li>
        <a href="~/TipoUsuario/">Tipo de Usuario</a>
    </li>
    <li class="active">
        @(Model.IDTIPOUSUARIO > 0 ? Model.NOMBRE : "Nuevo Registro")
    </li>
</ol>

@using (Html.BeginForm("Guardar", "TipoUsuario", FormMethod.Post, new { id = "frm-categoria" }))
{
    @Html.HiddenFor(x => x.IDTIPOUSUARIO)

    <div class="panel panel-default">
        <div class="panel-heading">
            Información del Tipo de Usuario
        </div>
        <div class="panel-body">
            <div class="form-group">
                @Html.LabelFor(x => x.IDTIPOUSUARIO)
                @Html.TextBoxFor(x => x.IDTIPOUSUARIO, new { @class = "form-control", disabled = true })
                @Html.ValidationMessageFor(x => x.IDTIPOUSUARIO, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.NOMBRE)
                @Html.TextBoxFor(x => x.NOMBRE, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.NOMBRE, null, new { @class = "label label-danger" })
            </div>
            <div>
                @Html.LabelFor(x => x.ESTADO)
                <select name="estado" class="form-control">
                    <option @(Model.ESTADO == "A" ? "selected" : "") value="A">Activo</option>
                    <option @(Model.ESTADO == "I" ? "selected" : "") value="I">Inactivo</option>
                </select>
                @Html.ValidationMessageFor(x => x.ESTADO, null, new { @class = "label label-danger" })
            </div>
        </div>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span></button>
        <a href="~/TipoUsuario" class="btn btn-lg btn-danger"><span class="glyphicon glyphicon-floppy-remove" aria-hidden="true"></span></a>
    </div>
}