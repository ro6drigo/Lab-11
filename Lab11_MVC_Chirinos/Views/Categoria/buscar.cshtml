@model List<Modelo.CATEGORIA>
@{
    ViewBag.Title = "Buscar Categorias";
}

<div class="row">
    <div class="col-sm-8">
        @using (Html.BeginForm("Buscar", "Home", FormMethod.Post, new { criterio = "frm-buscar", @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.TextBox("criterio", null, new { @class = "form-control", placeholder = "Buscar" })
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        }
    </div>
</div>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@(m.IDCATEGORIA)</td>
                    <td>@(m.NOMBRE)</td>
                    <td>@(m.DESCRIPCION)</td>
                    <td>@(m.ESTADO == "A" ? "Activo" : "Inactivo")</td>
                </tr>
            }
        </tbody>
    </table>
</div>