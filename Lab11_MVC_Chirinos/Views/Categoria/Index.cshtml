@model List<Modelo.CATEGORIA>
@{
    ViewBag.Title = "Listar Categorias";
}

<div class="row">
    <div class="col-sm-8">
        @using (Html.BeginForm("Index", "Categoria", FormMethod.Post, new { criterio = "frm-buscar", @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.TextBox("criterio", null, new { @class="form-control", placeholder="Buscar" })
            </div>
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        }
    </div>

    <div class="col-sm-4">
        <div class="text-right">
            <a href="~/Home/Mantenimiento/" class="btn btn-primary">Agregar Categoria</a>
        </div>
    </div>
</div>

<br />

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@(m.IDCATEGORIA)</td>
                    <td>@(m.NOMBRE)</td>
                    <td>@(m.DESCRIPCION)</td>
                    <td>@(m.ESTADO == "A" ? "Activo" : "Inactivo")</td>
                    <td>
                        <a href="~/Categoria/Detalle/@m.IDCATEGORIA" class="btn btn-warning btn-xs">Detalle</a>
                        <a href="~/Categoria/Mantenimiento/@m.IDCATEGORIA" class="btn btn-primary btn-xs">Editar</a>
                        <a href="~/Categoria/Eliminar/@m.IDCATEGORIA" class="btn btn-danger btn-xs" onclick="return confirm('¿Esta seguro de eliminar el registro?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>