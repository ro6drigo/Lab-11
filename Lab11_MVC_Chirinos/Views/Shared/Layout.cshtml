
@{
    string controlador = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    Modelo.USUARIO usuario = new Modelo.USUARIO().obtenerLogin(Modelo.SessionHelper.GetUser());
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lab 11 - Chirinos - @ViewBag.Title</title>


    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @if (Modelo.SessionHelper.ExistUserInSession())
    {
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand(Marca) and toggle(Nav) get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse" aria-expanded="false">
                        <span class="sr-only">Navegación</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="~/Home/Index" class="navbar-brand">MVC Chirinos</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categoria <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Listar", "Index", "Categoria")</li>
                                <li>@Html.ActionLink("Consulta Avanzada", "Consulta", "Categoria")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Producto <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Listar", "Index", "Producto")</li>
                                <li>@Html.ActionLink("Consulta Avanzada", "Buscar", "Producto")</li>
                            </ul>
                        </li>
                        <li><a href="~/Pedido/">Pedido</a></li>
                        <li><a href="~/DetallePedido/">Detalle Pedido</a></li>
                        <li><a href="~/Usuario/">Usuario</a></li>
                        <li><a href="~/TipoUsuario/">Tipo Usuario</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <img src="~/Uploads/@usuario.FOTO" alt="Foto de Perfil" height="20"/> @usuario.NOMBRE, @usuario.APELLIDOS <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Perfil", "", "")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Cerrar Sesión", "Logout", "Login")</li>
                            </ul>
                        </li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    }

        <main>
            <div class="page-header">
                <div class="container">
                    <br />
                    <h1>@ViewBag.Title</h1>
                </div>
            </div>

            <div class="container">
                @RenderBody()
            </div>
        </main>
    

    <script src="~/assets/js/jquery-1.12.3.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/jquery.form.js"></script>
    <script src="~/assets/js/ini.js"></script>
    <script src="~/assets/js/jquery.validate.min.js"></script>
    <script src="~/assets/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/jquery.anexgrid.min.js"></script>
</body>
</html>
